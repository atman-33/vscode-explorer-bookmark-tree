{
  "name": "explorer-bookmark-tree",
  "displayName": "Explorer Bookmark Tree",
  "description": "Bookmark frequently used files and folders and access them from a dedicated Explorer view.",
  "version": "1.1.0",
  "author": "atman-33",
  "publisher": "atman-dev",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/atman-33/vscode-explorer-bookmark-tree"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "bookmarks",
    "explorer",
    "tree",
    "favorites"
  ],
  "activationEvents": [],
  "main": "dist/extension.js",
  "extensionKind": [
    "workspace",
    "ui"
  ],
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "build:ext": "esbuild src/extension.ts --bundle --platform=node --target=node16 --external:vscode --outfile=dist/extension.js",
    "build": "npm run build:ext && npm run build:webview",
    "vscode:prepublish": "npm run build",
    "compile": "npm run build && npm run package",
    "watch": "concurrently \"tsc -w -p ./\" \"npm:watch:webview\"",
    "package": "vsce package",
    "lint": "ultracite lint",
    "format": "ultracite format",
    "check": "ultracite check",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "prepare": "husky",
    "--- WEBVIEW ---": "--- --- --- --- ---",
    "build:webview": "npm --prefix webview-ui run build",
    "watch:webview": "npm --prefix webview-ui run dev"
  },
  "contributes": {
    "commands": [
      {
        "command": "explorerBookmarkTree.bookmarkExplorerItem",
        "title": "Explorer Bookmark Tree: Add Bookmark"
      },
      {
        "command": "explorerBookmarkTree.openBookmark",
        "title": "Explorer Bookmark Tree: Open Bookmark"
      },
      {
        "command": "explorerBookmarkTree.deleteBookmark",
        "title": "Explorer Bookmark Tree: Remove Bookmark",
        "icon": "$(close)"
      },
      {
        "command": "explorerBookmarkTree.viewMode.list",
        "title": "Bookmarks: View as List",
        "icon": "$(list-flat)"
      },
      {
        "command": "explorerBookmarkTree.viewMode.tree",
        "title": "Bookmarks: View as Tree",
        "icon": "$(list-tree)"
      },
      {
        "command": "explorerBookmarkTree.clearBookmarks",
        "title": "Bookmarks: Clear All",
        "icon": "$(clear-all)"
      },
      {
        "command": "explorerBookmarkTree.copyPaths",
        "title": "Bookmarks: Copy Paths",
        "icon": "$(clippy)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "explorerBookmarkTree.bookmarkExplorerItem",
          "when": "explorerResourceIsFolder || resourceScheme == 'file'"
        }
      ],
      "explorer/context": [
        {
          "command": "explorerBookmarkTree.bookmarkExplorerItem",
          "group": "z_explorerBookmark@999",
          "when": "explorerResourceIsFolder || resourceScheme == 'file'"
        }
      ],
      "view/item/context": [
        {
          "command": "explorerBookmarkTree.deleteBookmark",
          "group": "inline@1",
          "when": "view == explorerBookmarkTree && (viewItem == bookmark:file || viewItem == bookmark:folder)",
          "icon": "$(close)",
          "title": "Explorer Bookmark Tree: Remove Bookmark"
        }
      ],
      "view/title": [
        {
          "command": "explorerBookmarkTree.copyPaths",
          "group": "navigation@0",
          "icon": "$(clippy)",
          "title": "Bookmarks: Copy Paths",
          "when": "view == explorerBookmarkTree && explorerBookmarkTree:hasBookmarks"
        },
        {
          "command": "explorerBookmarkTree.viewMode.list",
          "group": "navigation@1",
          "icon": "$(list-flat)",
          "title": "Bookmarks: View as List",
          "when": "view == explorerBookmarkTree && explorerBookmarkTree:viewMode == 'tree'"
        },
        {
          "command": "explorerBookmarkTree.viewMode.tree",
          "group": "navigation@1",
          "icon": "$(list-tree)",
          "title": "Bookmarks: View as Tree",
          "when": "view == explorerBookmarkTree && explorerBookmarkTree:viewMode == 'list'"
        },
        {
          "command": "explorerBookmarkTree.clearBookmarks",
          "group": "navigation@2",
          "icon": "$(clear-all)",
          "title": "Bookmarks: Clear All",
          "when": "view == explorerBookmarkTree"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "explorerBookmarkTree",
          "name": "Bookmarks"
        }
      ]
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@jest/globals": "^29.7.0",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.x",
    "@types/vscode": "^1.84.0",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.0",
    "copy-webpack-plugin": "^13.0.0",
    "esbuild": "^0.23.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.3.0",
    "ultracite": "^6.1.0",
    "vitest": "^3.2.4",
    "vsce": "^2.15.0"
  }
}
